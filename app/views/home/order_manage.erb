                <li class="page-item"><a class="page-link" href="#">«</a></li>
                <% (@pages).times do |i | page =  i + 1 %>
                  <li class="page-item"><a class="page-link btnPage" id="<%= page %>" href="#"><%= page %></a></li>

                <% end %>
                <li class="page-item"><a class="page-link" href="#">»</a></li>
              </ul>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>

</div>

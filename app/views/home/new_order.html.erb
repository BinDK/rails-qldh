         select: function( event, ui ) {
             $('#cusPhone').val(ui.item.label.split(' - ')[1]);
             $('#oldCusID').val(ui.item.objID);
             $('#orderCusID').val(ui.item.objID);
             oldCus(ui.item.objID);
         }
